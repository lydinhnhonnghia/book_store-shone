<style>
    .nav-custom .dropdown-toggle {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .nav-custom .dropdown-toggle .nav-profile-img img {
        width: 40px;
        height: 40px;
        border-radius: 50%;
    }

    .nav-custom .navbar-dropdown a {
        color: rgb(38, 37, 37);
    }

    .nav-custom .navbar-dropdown a:hover {
        color: #000 !important;
    }
    #dropdown-item-logout{
        cursor: pointer;
    }
</style>

<header class="page-hd">
    <div class="container header-ur">
        <div class="hd-box">
            <div class="hd-menu-left">
                <ul class="hd-nav-menu">
                    <li><a href="/">
                            <img height="100" width="100" src="{{infoWeb.logo}}" alt="">
                        </a></li>
                    <li><a href="#about">Danh mục</a></li>
                    <li><a href="#home">Thể loại</a></li>
                </ul>
            </div>
        </div>
        <div class="hd-box">
            <div class="hd-menu-right">
                <ul class="hd-nav-menu">
                    <li>
                        <div>
                            <input type="text" placeholder="Tên truyện hoặc thể loại">
                        </div>
                    </li>
                    {{#if infoMember.isLoggedIn}}
                    <li>
                        <ul class="navbar-nav navbar-nav-right nav-custom">
                            <li class="nav-item nav-profile dropdown">
                                <a class="nav-link dropdown-toggle" id="profileDropdown" href="#" data-toggle="dropdown"
                                    aria-expanded="false">
                                    <div class="nav-profile-img">
                                        <img src="/assets/images/faces/face1.jpg" height="40" width="40" alt="image">
                                        <span class="availability-status online"></span>
                                    </div>
                                    <div class="nav-profile-text">
                                        <p class="mb-1 text-black">{{infoUser.firstname}} {{infoUser.lastname}}</p>
                                    </div>
                                </a>
                                <div class="dropdown-menu navbar-dropdown" aria-labelledby="profileDropdown">
                                    <a class="dropdown-item" href="#">
                                        <i class="mdi mdi-account-box mr-2 text-success"></i> Trang cá nhân </a>
                                    <a class="dropdown-item" href="#">
                                        <i class="mdi mdi-bookmark-plus mr-2 text-success"></i> Quản lý truyện </a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" id="dropdown-item-logout">
                                        <i class="mdi mdi-logout mr-2 text-primary"></i> Đăng xuất </a>
                                </div>
                            </li>

                        </ul>
                    </li>
                    {{else}}
                    <li>
                        <span>
                            <i class="mdi mdi-account-circle mdi-icon-user"></i>
                        </span>
                    </li>
                    <li><a href="javascript:;" id="link-sign-in">Đăng nhập</a></li>
                    <li><a href="javascript:;" id="link-sign-up">Đăng ký</a></li>
                    {{/if}}
                </ul>
            </div>
        </div>
    </div>

</header>

{{> user/signInMember/index}}

<script>
    getElement('#dropdown-item-logout').addEventListener('click', () => {
        document.cookie = '_tk_=;';
        document.location.reload();
    })
</script>